<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Driver Management</title>
  <% if (locals.isProduction) { %>
    <link href="/css/style.css" rel="stylesheet">
  <% } else { %>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: { DEFAULT: '#2563eb', hover: '#1d4ed8' },
              secondary: { DEFAULT: '#f1f5f9', hover: '#e2e8f0' }
            }
          }
        }
      }
    </script>
  <% } %>
  <script src="https://unpkg.com/lucide@latest"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@500;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; }
    h1, h2, h3, h4, h5, h6 { font-family: 'Outfit', sans-serif; }
  </style>
</head>
<body class="bg-slate-50 min-h-screen">
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside id="sidebar" class="hidden md:flex flex-col fixed inset-y-0 z-50 w-64 border-r border-slate-200 bg-white">
      <div class="p-6 border-b border-slate-200">
        <h1 class="text-xl font-bold text-slate-900 flex items-center gap-2">
          <i data-lucide="truck" class="w-6 h-6 text-blue-600"></i>
          Driver System
        </h1>
      </div>
      
      <nav class="flex-1 p-4 space-y-1">
        <a href="/dashboard" data-testid="nav-dashboard" 
           class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium transition-all duration-200 <%= title === 'Dashboard' ? 'bg-blue-50 text-blue-600' : 'text-slate-600 hover:bg-slate-100' %>">
          <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
          Dashboard
        </a>
        <a href="/sticker" data-testid="nav-sticker"
           class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium transition-all duration-200 <%= title === 'Extra Sticker Liste' ? 'bg-blue-50 text-blue-600' : 'text-slate-600 hover:bg-slate-100' %>">
          <i data-lucide="sticky-note" class="w-5 h-5"></i>
          Extra Sticker
        </a>
        <a href="/empfehlungen" data-testid="nav-empfehlungen"
           class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium transition-all duration-200 <%= title === 'Empfehlungscode' ? 'bg-blue-50 text-blue-600' : 'text-slate-600 hover:bg-slate-100' %>">
          <i data-lucide="gift" class="w-5 h-5"></i>
          Empfehlungscode
        </a>
      </nav>
      
      <div class="p-4 border-t border-slate-200">
        <div class="flex items-center gap-3 px-4 py-3">
          <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center">
            <i data-lucide="user" class="w-4 h-4 text-blue-600"></i>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium text-slate-900"><%= user.username %></p>
            <p class="text-xs text-slate-500 capitalize"><%= user.role %></p>
          </div>
        </div>
        <a href="/auth/change-password"
           class="flex items-center gap-3 px-4 py-2 mt-1 rounded-lg text-sm font-medium text-slate-600 hover:bg-slate-100 transition-all duration-200">
          <i data-lucide="key" class="w-4 h-4"></i>
          Passwort Ã¤ndern
        </a>
        <a href="/auth/logout" data-testid="logout-btn"
           class="flex items-center gap-3 px-4 py-2 mt-1 rounded-lg text-sm font-medium text-red-600 hover:bg-red-50 transition-all duration-200">
          <i data-lucide="log-out" class="w-4 h-4"></i>
          Abmelden
        </a>
      </div>
    </aside>

    <!-- Mobile Header -->
    <header class="md:hidden fixed top-0 left-0 right-0 z-40 h-16 border-b border-slate-200 bg-white/80 backdrop-blur-md flex items-center justify-between px-4">
      <button id="mobile-menu-btn" data-testid="mobile-menu-btn" class="p-2 rounded-lg hover:bg-slate-100">
        <i data-lucide="menu" class="w-6 h-6 text-slate-600"></i>
      </button>
      <h1 class="text-lg font-bold text-slate-900">Driver System</h1>
      <a href="/auth/logout" class="p-2 rounded-lg hover:bg-red-50">
        <i data-lucide="log-out" class="w-5 h-5 text-red-600"></i>
      </a>
    </header>

    <!-- Mobile Sidebar Overlay -->
    <div id="mobile-sidebar-overlay" class="hidden fixed inset-0 z-50 bg-black/50 md:hidden"></div>
    
    <!-- Mobile Sidebar -->
    <aside id="mobile-sidebar" class="hidden fixed inset-y-0 left-0 z-50 w-64 bg-white md:hidden transform -translate-x-full transition-transform duration-200">
      <div class="p-6 border-b border-slate-200 flex items-center justify-between">
        <h1 class="text-xl font-bold text-slate-900">Driver System</h1>
        <button id="mobile-close-btn" class="p-2 rounded-lg hover:bg-slate-100">
          <i data-lucide="x" class="w-5 h-5 text-slate-600"></i>
        </button>
      </div>
      <nav class="p-4 space-y-1">
        <a href="/dashboard" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium <%= title === 'Dashboard' ? 'bg-blue-50 text-blue-600' : 'text-slate-600 hover:bg-slate-100' %>">
          <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
          Dashboard
        </a>
        <a href="/sticker" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium <%= title === 'Extra Sticker Liste' ? 'bg-blue-50 text-blue-600' : 'text-slate-600 hover:bg-slate-100' %>">
          <i data-lucide="sticky-note" class="w-5 h-5"></i>
          Extra Sticker
        </a>
        <a href="/empfehlungen" class="flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium <%= title === 'Empfehlungscode' ? 'bg-blue-50 text-blue-600' : 'text-slate-600 hover:bg-slate-100' %>">
          <i data-lucide="gift" class="w-5 h-5"></i>
          Empfehlungscode
        </a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 md:ml-64 pt-16 md:pt-0">
      <div class="p-6 md:p-8">
        <%- body %>
      </div>
    </main>
  </div>

  <script>
    lucide.createIcons();
    
    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileCloseBtn = document.getElementById('mobile-close-btn');
    const mobileSidebar = document.getElementById('mobile-sidebar');
    const mobileSidebarOverlay = document.getElementById('mobile-sidebar-overlay');
    
    function openMobileMenu() {
      mobileSidebar.classList.remove('hidden', '-translate-x-full');
      mobileSidebar.classList.add('translate-x-0');
      mobileSidebarOverlay.classList.remove('hidden');
    }
    
    function closeMobileMenu() {
      mobileSidebar.classList.add('-translate-x-full');
      mobileSidebar.classList.remove('translate-x-0');
      setTimeout(() => mobileSidebar.classList.add('hidden'), 200);
      mobileSidebarOverlay.classList.add('hidden');
    }
    
    if (mobileMenuBtn) mobileMenuBtn.addEventListener('click', openMobileMenu);
    if (mobileCloseBtn) mobileCloseBtn.addEventListener('click', closeMobileMenu);
    if (mobileSidebarOverlay) mobileSidebarOverlay.addEventListener('click', closeMobileMenu);
  </script>
</body>
</html>
