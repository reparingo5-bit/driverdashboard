<%- include('layout', { body: `
  <!-- Page Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-slate-900">Dashboard</h1>
      <p class="text-slate-500 mt-1">Übersicht aller Fahrer</p>
    </div>
    <div class="flex flex-wrap gap-3">
      ${user.role === 'admin' ? `
        <button 
          onclick="openAddModal()"
          data-testid="add-driver-btn"
          class="inline-flex items-center justify-center h-10 px-4 rounded-md bg-blue-600 text-white text-sm font-medium hover:bg-blue-700 transition-all duration-200 gap-2"
        >
          <i data-lucide="plus" class="w-4 h-4"></i>
          Fahrer hinzufügen
        </button>
        <a 
          href="/dashboard/export"
          data-testid="export-csv-btn"
          class="inline-flex items-center justify-center h-10 px-4 rounded-md border border-slate-200 bg-white text-slate-900 text-sm font-medium hover:bg-slate-100 transition-all duration-200 gap-2"
        >
          <i data-lucide="download" class="w-4 h-4"></i>
          CSV Export
        </a>
      ` : ''}
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="rounded-xl border border-slate-200 bg-white shadow-sm p-6" data-testid="stat-total">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-lg bg-slate-100 flex items-center justify-center">
          <i data-lucide="users" class="w-6 h-6 text-slate-600"></i>
        </div>
        <div>
          <p class="text-sm font-medium text-slate-500">Gesamt</p>
          <p class="text-2xl font-bold text-slate-900">${stats.total}</p>
        </div>
      </div>
    </div>
    
    <div class="rounded-xl border border-slate-200 bg-white shadow-sm p-6" data-testid="stat-aktiv">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-lg bg-green-100 flex items-center justify-center">
          <i data-lucide="check-circle" class="w-6 h-6 text-green-600"></i>
        </div>
        <div>
          <p class="text-sm font-medium text-slate-500">Aktiv</p>
          <p class="text-2xl font-bold text-green-600">${stats.aktiv}</p>
        </div>
      </div>
    </div>
    
    <div class="rounded-xl border border-slate-200 bg-white shadow-sm p-6" data-testid="stat-inaktiv">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-lg bg-red-100 flex items-center justify-center">
          <i data-lucide="x-circle" class="w-6 h-6 text-red-600"></i>
        </div>
        <div>
          <p class="text-sm font-medium text-slate-500">Inaktiv</p>
          <p class="text-2xl font-bold text-red-600">${stats.inaktiv}</p>
        </div>
      </div>
    </div>
    
    <div class="rounded-xl border border-slate-200 bg-white shadow-sm p-6" data-testid="stat-neu">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-lg bg-blue-100 flex items-center justify-center">
          <i data-lucide="user-plus" class="w-6 h-6 text-blue-600"></i>
        </div>
        <div>
          <p class="text-sm font-medium text-slate-500">Neu</p>
          <p class="text-2xl font-bold text-blue-600">${stats.neu}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Drivers Table -->
  <div class="rounded-xl border border-slate-200 bg-white shadow-sm" data-testid="drivers-table-card">
    <div class="p-6 border-b border-slate-200">
      <h2 class="text-lg font-semibold text-slate-900">Fahrerliste</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="border-b border-slate-200 bg-slate-50">
            <th class="h-12 px-4 text-left align-middle text-sm font-medium text-slate-500">Name</th>
            <th class="h-12 px-4 text-left align-middle text-sm font-medium text-slate-500 hidden md:table-cell">Kontakt</th>
            <th class="h-12 px-4 text-left align-middle text-sm font-medium text-slate-500">Status</th>
            <th class="h-12 px-4 text-left align-middle text-sm font-medium text-slate-500 hidden lg:table-cell">Fahrzeug</th>
            <th class="h-12 px-4 text-left align-middle text-sm font-medium text-slate-500 hidden lg:table-cell">Kennzeichen</th>
            <th class="h-12 px-4 text-left align-middle text-sm font-medium text-slate-500 hidden xl:table-cell">Sticker</th>
            <th class="h-12 px-4 text-left align-middle text-sm font-medium text-slate-500 hidden xl:table-cell">App</th>
            <th class="h-12 px-4 text-right align-middle text-sm font-medium text-slate-500">Aktionen</th>
          </tr>
        </thead>
        <tbody>
          ${drivers.length === 0 ? `
            <tr>
              <td colspan="8" class="p-8 text-center text-slate-500">
                <i data-lucide="inbox" class="w-12 h-12 mx-auto mb-3 text-slate-300"></i>
                <p>Keine Fahrer gefunden</p>
              </td>
            </tr>
          ` : drivers.map(driver => `
            <tr class="border-b border-slate-100 hover:bg-slate-50 transition-colors" data-testid="driver-row-${driver.id}">
              <td class="p-4">
                <div>
                  <p class="font-medium text-slate-900">${driver.vorname} ${driver.nachname}</p>
                  <p class="text-sm text-slate-500 md:hidden">${driver.email || '-'}</p>
                </div>
              </td>
              <td class="p-4 hidden md:table-cell">
                <p class="text-sm text-slate-600">${driver.email || '-'}</p>
                <p class="text-sm text-slate-500">${driver.phone || '-'}</p>
              </td>
              <td class="p-4">
                <form method="POST" action="/drivers/status/${driver.id}" class="inline-block">
                  <select 
                    name="status" 
                    onchange="this.form.submit()"
                    data-testid="status-select-${driver.id}"
                    class="h-8 px-2 rounded-md border-0 text-xs font-semibold cursor-pointer transition-all duration-200 ${
                      driver.status === 'aktiv' ? 'bg-green-100 text-green-700' :
                      driver.status === 'inaktiv' ? 'bg-red-100 text-red-700' :
                      'bg-blue-100 text-blue-700'
                    }"
                  >
                    <option value="aktiv" ${driver.status === 'aktiv' ? 'selected' : ''}>Aktiv</option>
                    <option value="inaktiv" ${driver.status === 'inaktiv' ? 'selected' : ''}>Inaktiv</option>
                    <option value="neu" ${driver.status === 'neu' ? 'selected' : ''}>Neu</option>
                  </select>
                </form>
              </td>
              <td class="p-4 hidden lg:table-cell">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-700">
                  ${driver.fahrzeugtyp}
                </span>
              </td>
              <td class="p-4 hidden lg:table-cell text-sm text-slate-600">${driver.kennzeichen || '-'}</td>
              <td class="p-4 hidden xl:table-cell">
                ${driver.sticker ? 
                  '<span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-green-100"><i data-lucide="check" class="w-4 h-4 text-green-600"></i></span>' : 
                  '<span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-slate-100"><i data-lucide="x" class="w-4 h-4 text-slate-400"></i></span>'
                }
              </td>
              <td class="p-4 hidden xl:table-cell">
                ${driver.app ? 
                  '<span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-green-100"><i data-lucide="check" class="w-4 h-4 text-green-600"></i></span>' : 
                  '<span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-slate-100"><i data-lucide="x" class="w-4 h-4 text-slate-400"></i></span>'
                }
              </td>
              <td class="p-4 text-right">
                <div class="flex items-center justify-end gap-2">
                  ${user.role === 'admin' ? `
                    <button 
                      onclick="openEditModal('${driver.id}')"
                      data-testid="edit-driver-${driver.id}"
                      class="inline-flex items-center justify-center w-8 h-8 rounded-md hover:bg-slate-100 transition-all duration-200"
                    >
                      <i data-lucide="pencil" class="w-4 h-4 text-slate-600"></i>
                    </button>
                    <form method="POST" action="/drivers/delete/${driver.id}" onsubmit="return confirm('Sind Sie sicher?')">
                      <button 
                        type="submit"
                        data-testid="delete-driver-${driver.id}"
                        class="inline-flex items-center justify-center w-8 h-8 rounded-md hover:bg-red-50 transition-all duration-200"
                      >
                        <i data-lucide="trash-2" class="w-4 h-4 text-red-600"></i>
                      </button>
                    </form>
                  ` : ''}
                </div>
              </td>
            </tr>
          `).join('')}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Add/Edit Modal -->
  <div id="driverModal" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4">
    <div class="absolute inset-0 bg-black/50" onclick="closeModal()"></div>
    <div class="relative w-full max-w-lg bg-white rounded-xl shadow-xl" data-testid="driver-modal">
      <div class="p-6 border-b border-slate-200">
        <h3 id="modalTitle" class="text-lg font-semibold text-slate-900">Fahrer hinzufügen</h3>
        <button onclick="closeModal()" class="absolute top-4 right-4 p-2 rounded-lg hover:bg-slate-100">
          <i data-lucide="x" class="w-5 h-5 text-slate-500"></i>
        </button>
      </div>
      <form id="driverForm" method="POST" action="/drivers/add">
        <div class="p-6 space-y-4 max-h-[60vh] overflow-y-auto">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">Vorname *</label>
              <input type="text" name="vorname" id="form_vorname" required data-testid="form-vorname"
                     class="flex h-10 w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2">
            </div>
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">Nachname *</label>
              <input type="text" name="nachname" id="form_nachname" required data-testid="form-nachname"
                     class="flex h-10 w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2">
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">E-Mail</label>
            <input type="email" name="email" id="form_email" data-testid="form-email"
                   class="flex h-10 w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2">
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Telefon</label>
            <input type="text" name="phone" id="form_phone" data-testid="form-phone"
                   class="flex h-10 w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2">
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">Status</label>
              <select name="status" id="form_status" data-testid="form-status"
                      class="flex h-10 w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2">
                <option value="neu">Neu</option>
                <option value="aktiv">Aktiv</option>
                <option value="inaktiv">Inaktiv</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">Fahrzeugtyp *</label>
              <select name="fahrzeugtyp" id="form_fahrzeugtyp" required data-testid="form-fahrzeugtyp"
                      class="flex h-10 w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2">
                <option value="Fahrrad">Fahrrad</option>
                <option value="PKW">PKW</option>
                <option value="Caddy">Caddy</option>
                <option value="Transporter">Transporter</option>
              </select>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Kennzeichen</label>
            <input type="text" name="kennzeichen" id="form_kennzeichen" data-testid="form-kennzeichen"
                   class="flex h-10 w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2">
          </div>
          <div class="flex items-center gap-6">
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" name="sticker" value="true" id="form_sticker" data-testid="form-sticker"
                     class="w-4 h-4 rounded border-slate-300 text-blue-600 focus:ring-blue-600">
              <span class="text-sm text-slate-700">Sticker</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" name="app" value="true" id="form_app" data-testid="form-app"
                     class="w-4 h-4 rounded border-slate-300 text-blue-600 focus:ring-blue-600">
              <span class="text-sm text-slate-700">App</span>
            </label>
          </div>
        </div>
        <div class="p-6 border-t border-slate-200 flex justify-end gap-3">
          <button type="button" onclick="closeModal()"
                  class="h-10 px-4 rounded-md border border-slate-200 bg-white text-slate-900 text-sm font-medium hover:bg-slate-100 transition-all duration-200">
            Abbrechen
          </button>
          <button type="submit" data-testid="form-submit"
                  class="h-10 px-4 rounded-md bg-blue-600 text-white text-sm font-medium hover:bg-blue-700 transition-all duration-200">
            Speichern
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function openAddModal() {
      document.getElementById('modalTitle').textContent = 'Fahrer hinzufügen';
      document.getElementById('driverForm').action = '/drivers/add';
      document.getElementById('driverForm').reset();
      document.getElementById('driverModal').classList.remove('hidden');
      lucide.createIcons();
    }

    async function openEditModal(id) {
      try {
        const response = await fetch('/drivers/get/' + id);
        const driver = await response.json();
        
        document.getElementById('modalTitle').textContent = 'Fahrer bearbeiten';
        document.getElementById('driverForm').action = '/drivers/update/' + id;
        
        document.getElementById('form_vorname').value = driver.vorname;
        document.getElementById('form_nachname').value = driver.nachname;
        document.getElementById('form_email').value = driver.email || '';
        document.getElementById('form_phone').value = driver.phone || '';
        document.getElementById('form_status').value = driver.status;
        document.getElementById('form_fahrzeugtyp').value = driver.fahrzeugtyp;
        document.getElementById('form_kennzeichen').value = driver.kennzeichen || '';
        document.getElementById('form_sticker').checked = driver.sticker;
        document.getElementById('form_app').checked = driver.app;
        
        document.getElementById('driverModal').classList.remove('hidden');
        lucide.createIcons();
      } catch (error) {
        alert('Fehler beim Laden der Fahrerdaten');
      }
    }

    function closeModal() {
      document.getElementById('driverModal').classList.add('hidden');
    }
    
    // Close modal on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') closeModal();
    });
  </script>
` }) %>
